{
  "name": "magnus-apeye",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "build:watch": "rimraf ./dist && tsc --watch --preserveWatchOutput",
    "start": "node -r dotenv/config dist/server.js",
    "start:watch": "nodemon -r dotenv/config dist/server.js",
    "dev": "npm run build && npm run start",
    "dev:watch": "concurrently -c cyan,magenta \"npm run build:watch\" \"wait-on dist/server.js && npm run start:watch\"",
    "test": "jest --coverage --verbose --runInBand --setupFiles dotenv/config",
    "test:watch": "jest --watch --coverage --verbose --runInBand --setupFiles dotenv/config",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:fix": "prettier --write .",
    "fix": "npm run format:fix && npm run lint:fix"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "GPL 3.0",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/marked": "^4.0.1",
    "@types/pg": "^8.6.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "concurrently": "^6.2.0",
    "eslint": "^7.30.0",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "marked": "^4.0.8",
    "pg": "^8.6.0"
  }
}
